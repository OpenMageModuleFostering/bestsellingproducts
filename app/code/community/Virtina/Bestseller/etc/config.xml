<config>
    <modules>
        <Virtina_Bestseller>
            <version>1.0.0</version>
        </Virtina_Bestseller>
    </modules>
    <frontend>
        <routers>
            <bestseller>
                <use>standard</use>
                <args>
                    <module>Virtina_Bestseller</module>
                    <frontName>bestseller</frontName>
                </args>
            </bestseller>
        </routers>
        <layout>
            <updates>
                <bestseller>
                    <file>bestseller.xml</file>
                </bestseller>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<bestseller>
				<use>admin</use>
				<args>
					<module>Virtina_Bestseller</module>
					<frontName>bestseller</frontName>
				</args>
			</bestseller>
        </routers>
    </admin>
    
    <global>
        <models>
            <bestseller>
                <class>Virtina_Bestseller_Model</class>
                <resourceModel>bestseller_mysql4</resourceModel>
            </bestseller>
           <reports_resource>
               <rewrite>
                   <product_collection>Virtina_Bestseller_Model_Resource_Product_Collection</product_collection>
               </rewrite>
           </reports_resource>            
            <bestseller_mysql4>
                <class>Virtina_Bestseller_Model_Mysql4</class>
                <entities>
                    <bestseller>
                        <table>bestseller</table>
                    </bestseller>
                </entities>
            </bestseller_mysql4>
        </models>
        <helpers>
            <bestseller>
                <class>Virtina_Bestseller_Helper</class>
            </bestseller>
        </helpers>
        <resources>
            <bestseller_setup>
                <setup>
                    <module>Virtina_Bestseller</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </bestseller_setup>
            <bestseller_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </bestseller_write>
            <bestseller_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </bestseller_read>
        </resources>
        <blocks>
            <bestseller>
                <class>Virtina_Bestseller_Block</class>
            </bestseller>
        </blocks>
    </global>
</config>
