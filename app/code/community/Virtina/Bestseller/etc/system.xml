<config>
    <tabs>
        <virtina_extensions translate="label" module="bestseller">
            <label>Virtina Extensions</label>
            <sort_order>100</sort_order>
        </virtina_extensions>
    </tabs>
    <sections>
        <bestseller>
            <label>Best Seller</label>
            <tab>virtina_extensions</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
 
            <groups>
                <general translate="label" module="bestseller">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
 
                    <fields>
                        <enable translate="label">
                            <label>Enable jQuery </label>
                            <comment>Example:jquery-1.10.2.min.js(No for disable)</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                    </fields>
                </general>
                <slider translate="label" module="bestseller">
                    <label>Slider</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
 
                    <fields>
                        <infinite translate="label">
                            <label>Enable Slider </label>                            
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </infinite>
                        <number translate="label">
                            <label>Set number of items</label> 
                            <depends><infinite>1</infinite></depends>
                            <comment>Default: 5 (products).</comment>                           
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </number>
                        <scroll translate="label">
                            <label>Set number of items to scroll</label>
                            <depends><infinite>1</infinite></depends> 
                            <comment>Default: 1 (product).</comment>                           
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </scroll>   
                        <imgsize translate="label">
                            <label>Image size </label> 
                            <depends><infinite>1</infinite></depends>                           
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </imgsize>                     
                        <speed translate="label">
                            <label>Speed </label>
                            <depends><infinite>1</infinite></depends> 
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </speed>
                        <auto translate="label">
                            <label>Slide auto </label>
                            <depends><infinite>1</infinite></depends> 
                            <comment>Default: Yes. Slider scrolls automatically .</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </auto>
                    </fields>
                </slider>              
            </groups>
        </bestseller>
    </sections>
</config>
